<div class="@($"card text-white bg-{Team.Color.ColorClass()} mb-3")" style="max-width: 18rem;">
    <div class="card-body">
        <strong>@Team.ToString()</strong>
        <button type="button" class="ml-2 mb-1 close text-white" aria-label="Close"
                @onclick="async () => await OnTeamRemoved.InvokeAsync(Team)">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
</div>

@code {
    [Parameter]
    public Team Team { get; set; }

    [Parameter]
    public EventCallback<Team> OnTeamRemoved { get; set; }
}
