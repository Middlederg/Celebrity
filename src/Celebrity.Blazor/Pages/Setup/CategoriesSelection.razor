<div class="col-lg-12">


    <div class="d-flex justify-content-between align-items-center">
        <h3 class="my-1">
            Categories
        </h3>
    </div>

    <hr class="my-0" />


    <nav class="navbar navbar-expand-lg navbar-light bg-light p-0 mb-3">
        <div class="form-inline my-2 my-lg-0">
            <div class="input-group">
                <input class="form-control form-control-sm"
                       type="search"
                       placeholder="Search"
                       aria-label="Search"
                       aria-describedby="searchButton">
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary btn-sm my-2 my-sm-0" type="submit" id="searchButton">
                        <span class="oi oi-magnifying-glass" title="icon name" aria-hidden="true"></span>
                    </button>
                </div>
            </div>

        </div>

        <button class="btn btn-light btn-sm ml-4">
            select all categories
        </button>
        <button class="btn btn-light btn-sm ml-4">
            unselect all categories
        </button>
    </nav>

</div>

<div class="col-lg-4">
    <div class="card border-info mb-3">
        <div class="card-header">
            <div class="custom-control custom-checkbox" indeterminate="true">
                <input type="checkbox" class="custom-control-input" indeterminate="true" id="customCheck1">
                <label class="custom-control-label text-uppercase" for="customCheck1">
                    <strong>Personajes históricos</strong>
                </label>
            </div>
        </div>
        <div class="card-body text-dark">
            <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" id="antiguedad">
                <label class="custom-control-label" for="antiguedad">Antigüedad</label>
            </div>
            <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" id="medieval">
                <label class="custom-control-label" for="medieval">Medieval</label>
            </div>
        </div>
    </div>
</div>
<div class="col-lg-4">
    <div class="card border-info mb-3">
        <div class="card-header">
            <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" id="customCheck1">
                <label class="custom-control-label text-uppercase" for="customCheck1">
                    <strong>Universos</strong>
                </label>
            </div>
        </div>
        <div class="card-body text-dark">
            <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" id="starWars">
                <label class="custom-control-label" for="starWars">Star wars</label>
            </div>
            <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" id="harryPotter">
                <label class="custom-control-label" for="harryPotter">Harry Potter</label>
            </div>
            <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" id="marvel">
                <label class="custom-control-label" for="marvel">Marvel</label>
            </div>
        </div>
    </div>
</div>

